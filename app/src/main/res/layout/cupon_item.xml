<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="10dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/checkbox_bg"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monagas"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/check"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Result"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/match"
        app:layout_constraintStart_toEndOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/choose" />

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monagas - Colo-Colo"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/match"
        app:layout_constraintStart_toEndOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/choose" />

    <ImageView
        android:id="@+id/krest"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/krest_gray"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/koef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.75"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintEnd_toStartOf="@id/krest"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/light_gray"
        android:hint="Valor"
        android:textColorHint="@color/light_gray"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:padding="2dp"
        android:background="@drawable/constraint_match"
        app:layout_constraintEnd_toStartOf="@id/krest"
        app:layout_constraintTop_toBottomOf="@id/koef"/>

    <TextView
        android:id="@+id/niz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possiveis gahnos -_-- BRL"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toStartOf="@id/krest"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>